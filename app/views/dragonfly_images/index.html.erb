<p id="notice"><%= notice %></p>

<h1>Dine bilder</h1>

<table>
  <thead>
  <tr>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @dragonfly_images.each do |dragonfly_image| %>
      <% if dragonfly_image.user_id == @current_user.id.to_s %>
          <%= image_tag dragonfly_image.asset.thumb('300x300#').url if dragonfly_image.asset_stored? %>
          <%= link_to 'Vis', dragonfly_image, :class => "btn btn-primary" %>
          <%= link_to 'Endre', edit_dragonfly_image_path(dragonfly_image), :class => "btn btn-primary" %>
          <%= link_to 'Slett', dragonfly_image, method: :delete, data: { confirm: 'Er du sikker?' }, :class => "btn btn-primary" %>
      <% end %>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Legg til nytt bilde', new_dragonfly_image_path, :class => "btn btn-primary" %>
