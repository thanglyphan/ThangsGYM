<% @page_title = "MyWebsite | Login" -%>
<div class="jumbotron">
  <div class="container">
    <h1>Log in</h1>
    <p><%=flash[:notice]%></p>
    <%= form_tag(:action => 'login_attempt') do %>
        <p>Username or Email:</br> <%= text_field_tag(:username_or_email) %></p>
        <p>Password:</br> <%= password_field_tag :login_password %></p>

        <%= label_tag :remember_me %>
        <%= check_box_tag :remember_me, 1, params[:remember_me] %>
        <p></p>
        <td><button type="submit" class="btn btn-default">Log in</button></td> or <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %>
    <% end %>
    <% if @current_facebookuser.present? %>
        <% for fa in @all_users do %>
            <% if fa.faceuid == @current_facebookuser.uid %>
                <script type="text/javascript">
                  $(window).load(function(){
                    $('#connectModalAlreadyLoggedIn').modal('show');
                  });
                </script>
            <% end %>
            <% if @current_facebookuser.present? && fa.faceuid.nil? %>
                <% if fa.faceuid.nil? %>
                    <script type="text/javascript">
                      $(window).load(function(){
                        $('#connectModal').modal('show');
                      });
                    </script>
                <% end %>
            <% end %>
            <script type="text/javascript">
              $(window).load(function(){
                $('#connectModal').modal('show');
              });
            </script>
        <% end %>
    <% else %>
        <script type="text/javascript">
          $(window).load(function(){
            $('#connectModal').modal('hide');
          });
        </script>
    <% end %>

    <%= link_to "Sign up", new_user_path %> |
    <%= link_to "Forgot password?", reset_password_path%> |
  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="connectModal" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h2 class="modal-title">
          <div class="text-center">
            <% if @current_facebookuser.present? %>
                <p>Velkommen, <%= @current_facebookuser.name %>!</p>
                <img src="http://graph.facebook.com/<%= @current_facebookuser.uid %>/picture">
            <% end %>
          </div>
        </h2>
      </div>
      <div class="modal-body">
        <%= form_tag(:action => 'login_attempt') do %>
            <p>Username or Email:</br> <%= text_field_tag(:username_or_email) %></p>
            <p>Password:</br> <%= password_field_tag :login_password %></p>

            <p></p>
            <td><button type="submit" class="btn btn-default">Koble til med facebook!</button></td>
        <% end %>


      </div>
      <div class="modal-footer">
        <h4>Ikke deg?<td><button type="submit" class="btn btn-default"> <%= link_to "Sign out", signout_path, id: "sign_out" %> </button></td>
          <button type="button" class="btn btn-default" data-dismiss="modal">Avslutt</button></h4>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="connectModalAlreadyLoggedIn" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h2 class="modal-title">
          <div class="text-center">
            <% if @current_facebookuser.present? %>
                <p>Velkommen, <%= @current_facebookuser.name %>!</p>
                <img src="http://graph.facebook.com/<%= @current_facebookuser.uid %>/picture">
            <% end %>
          </div>
        </h2>
      </div>
      <div class="modal-body">
        <%= form_tag(:action => 'login_attempt_with_facebook') do %>
            <p>Password:</br> <%= password_field_tag :login_password %></p>
            <td><button type="submit" class="btn btn-default">Koble til med facebook!</button></td>
        <% end %>


      </div>
      <div class="modal-footer">
        <h4>Ikke deg?<td><button type="submit" class="btn btn-default"> <%= link_to "Sign out", signout_path, id: "sign_out" %> </button></td>
          <button type="button" class="btn btn-default" data-dismiss="modal">Avslutt</button></h4>
      </div>
    </div>
  </div>
</div>