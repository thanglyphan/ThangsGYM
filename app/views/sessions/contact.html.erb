<%= flash[:notice] %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <!--small><i></i>Add alerts if form ok... success, else error.</i></small-->
      <div class="alert alert-success"><strong> Success! Message sent. (If form ok!)</strong></div>
      <div class="alert alert-danger"><strong> Error! Please check the inputs. (If form error!)</strong></div>
    </div>

    <%= form_tag(:action => 'send_me_mail') do %>
      <div class="col-lg-6">
        <div class="well well-sm"><strong>X - Required Field</strong></div>
        <div class="form-group">
          <label for="InputName">Ditt Navn</label>
          <div class="input-group">
            <input type="text" class="form-control" name="InputName" id="InputName" placeholder="Oppgi navn" required>
            <span class="input-group-addon"> X </span></div>
        </div>
        <div class="form-group">
          <label for="InputEmail">Din Email</label>
          <div class="input-group">
            <input type="email" class="form-control" id="InputEmail" name="InputEmail" placeholder="Oppgi epost" required  >
            <span class="input-group-addon"> X </span></div>
        </div>
        <div class="form-group">
          <label for="InputMessage">Melding til Thang</label>
          <div class="input-group">
            <textarea name="InputMessage" id="InputMessage" class="form-control" rows="5" required></textarea>
            <span class="input-group-addon"> X </span></div>
        </div>
        <input type="submit" name="submit" id="submit" value="Kontakt meg" class="btn btn-info pull-right">
      </div>
    <% end %>
    <hr class="featurette-divider hidden-lg">
    <div class="col-lg-5 col-md-push-1">
      <address>
        <h3>Thang sin info</h3>
        <p class="lead"><a href="https://www.google.com/maps/preview?ie=UTF-8&q=The+Pentagon&fb=1&gl=us&hq=1400+Defense+Pentagon+Washington,+DC+20301-1400&cid=12647181945379443503&ei=qmYfU4H8LoL2oATa0IHIBg&ved=0CKwBEPwSMAo&safe=on">The Pentagon<br>
          Trimveien 8, 0372 Oslo</a><br>
          Telefon: 947 82 533<br>
          Email: lyern52@gmail.com</p>
      </address>
    </div>
  </div>
</div>