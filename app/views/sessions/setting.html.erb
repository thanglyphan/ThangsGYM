<div class="jumbotron">
  <div class="container">
    <h1>Change your password</h1>
    <%= flash[:notice] %>
    <%= form_tag(:action => 'change_password') do %>
        <p>Brukernavn eller Email:</br> <%= text_field_tag(:username_or_email) %></p>
        <p>Gammelt passord:</br> <%= password_field_tag (:login_password) %></p>
        <p>Nytt passord:</br> <%= password_field_tag (:login_new_password) %></p>
        <p>Nytt passord:</br> <%= password_field_tag (:login_new_password) %></p>
        <%= submit_tag("Make change") %>
    <% end %>
    <%= flash[:error] %>



    <% if @subs %>
        <%= form_tag(:action => 'remove_subscription') do %>
            <p><strong>Unsubscribe!</strong></p>
            <%= submit_tag("Unsubscribe!") %>
        <% end %>
    <% else %>
        <%= form_tag(:action => 'add_subscription') do %>
            <p><strong>Få de senere oppdateringene! Subscribe til meg nå!</strong></p>
            <%= submit_tag("Subscribe!") %>
        <% end %>
    <% end %>
  </div>
</div>